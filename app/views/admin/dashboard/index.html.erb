<%= render partial: 'admin/header' %>

<div id="top-5-customers">
<h3>Top 5 Customers:</h3>
<ol>
  <% @customers.top_5_customers.each do |customer| %>
    <li id="<%= customer.id %>"><%= customer.first_name %> <%= customer.last_name %> - <%= customer.success_count %> purchases</li>
  <% end %>
</ol>
</div>

<div id="incomplete-invoices")>
  <h3>Incomplete Invoices</h3>
  <ul> 
    <% @invoices.unshipped_invoices.sort_by_date.each do |invoice| %>
      <li><%= link_to "Invoice ##{invoice.id}", admin_invoice_path(invoice.id) %> - <%= invoice.created_at.strftime("%A, %B %d, %Y") %></li>
    <% end %>
  </ul>
</div>